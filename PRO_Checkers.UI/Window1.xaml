<Window x:Class="PRO_Checkers.UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sto Twarzy Warcabiarzy" WindowStartupLocation="CenterScreen" Height="600" Width="600" Background="#FFD7D5AF" ResizeMode="NoResize">
    <Grid Width="580" Height="580" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFD7D5AF">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Label x:Name="TurnLabel"></Label>
                <Label x:Name="ScoreWhite"></Label>
                <Label x:Name="ScoreBlack"></Label>
        </StackPanel>
        <Grid Width="410" Height="410" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF715319">
            <Canvas x:Name="CheckerCanvas" MouseMove="CheckerCanvas_MouseMove" MouseUp="CheckerCanvas_MouseUp" Background="#FFD7D5AF" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="400">
            </Canvas>
        </Grid>
    </Grid>
</Window>